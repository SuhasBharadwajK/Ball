<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#3366FF"/>
            <gradient android:angle="-90" android:startColor="#0052CC" android:endColor="#4579C5"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="3dip" />
            <stroke android:width="3dip" android:color="#5e7974" />
            <solid android:color="#000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#0099cc" />
            <gradient android:angle="-90" android:startColor="#0099" android:endColor="#808080" />
        </shape>
    </item>
</selector>